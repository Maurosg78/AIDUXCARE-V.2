{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "vite/client"]
  },
  "include": [
    "test/core/**/*.spec.ts",
    "src/core/emr/**/*.ts",
    "src/core/notes/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "test/**/*.{e2e,snap}.ts"
  ]
}
