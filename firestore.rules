rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para desarrollo - PERMITIR ACCESO TEMPORAL
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Reglas específicas para perfiles de usuario
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Reglas para auditoría
    match /audit_logs/{logId} {
      allow read, write: if true;
    }
    
    // Reglas para pacientes
    match /patients/{patientId} {
      allow read, write: if true;
    }
    
    // Reglas para visitas
    match /visits/{visitId} {
      allow read, write: if true;
    }
  }
}