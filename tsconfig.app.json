{
  "extends": "./tsconfig.json",
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "tests",
    "test",
    "**/__tests__/**",
    "src/_deprecated/**",
    "src/z_trash/**",
    "src/setupTests.ts",
    "src/core/fhir/**",
    "src/core/sttLocal/**",
    "src/services/WebSpeechSTTService.ts",
    "src/components/professional/**"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}