{
  "typescript.tsserver.watchOptions": {
    "watchFile": "off",
    "watchDirectory": "off",
    "fallbackPolling": "dynamicPriority"
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/.vite/**": true,
    "**/backups/**": true,
    "**/canonical_snapshots/**": true,
    "**/docs/**": true,
    "**/test/**": true,
    "**/tests/**": true,
    "**/scripts/**": true,
    "**/.github/**": true,
    "**/functions/**": true,
    "**/emulator-data/**": true,
    "**/coverage/**": true,
    "**/_deprecated/**": true,
    "**/_trash/**": true,
    "**/z_trash/**": true,
    "**/*.test.ts": true,
    "**/*.test.tsx": true,
    "**/*.spec.ts": true,
    "**/*.spec.tsx": true
  },
  "files.exclude": {
    "**/.vite": true,
    "**/node_modules/.vite": true
  },
  // ✅ AUTO-SAVE CONFIGURATION
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // ✅ BACKUP CONFIGURATION
  "files.backup": true,
  "files.backupPath": "${workspaceFolder}/backups",
  "files.backupRetention": 10,
  "git.ignoreLimitWarning": true
}
