
echo "ğŸ§ª CI Gate (pre-push): typecheck, lint (staged), tests, build"

# Base branch para mensajes informativos si hiciera falta
if git rev-parse --verify origin/develop >/dev/null 2>&1; then
  BASE="origin/develop"
elif git rev-parse --verify origin/main >/dev/null 2>&1; then
  BASE="origin/main"
else
  BASE="$(git rev-list --max-parents=0 HEAD)"
fi

# 1) TypeScript
npm run -s typecheck || { echo "âŒ TypeScript con errores"; exit 1; }

# 2) ESLint SOLO si no pides saltarlo explÃ­citamente
if [ "${SKIP_LINT:-0}" = "1" ]; then
  echo "âš ï¸  SKIP_LINT=1 â†’ saltando ESLint en pre-push (solo este push)."
else
  # Lint **solo** los archivos STAGED que van en este push
  STAGED="$(git diff --cached --name-only --diff-filter=ACMRT \
    | grep -E '\.(ts|tsx|js|jsx)$' \
    | grep -v -E '^(scripts|cloud-functions|archived|src/_deprecated|docs)/' || true)"

  if [ -z "$STAGED" ]; then
    echo "â„¹ï¸ No hay archivos de app staged para lint. Saltando ESLint."
  else
    echo "ğŸ” ESLint (staged files):"
    echo "$STAGED"
    # NUL-safe; no peta por patrones que no matcheen; no bloquea por warnings
    printf '%s\0' $STAGED | xargs -0 -n 50 npx eslint --config eslint.config.js --no-error-on-unmatched-pattern || {
      echo "âŒ ESLint con errores"; exit 1;
    }
  fi
fi

# 3) Tests (si existen)
if [ -f "vitest.config.ts" ] || [ -f "vitest.config.js" ] || ls test 1>/dev/null 2>&1 || ls src/**/*.test.* 1>/dev/null 2>&1; then
  npm run -s test:ci || { echo "âŒ Tests fallando"; exit 1; }
else
  echo "âŒ No se detectaron tests. Agrega al menos uno antes de push."
  exit 1
fi

# 4) Build prod
npm run -s build || { echo "âŒ Build de producciÃ³n fallÃ³"; exit 1; }

echo "âœ… pre-push OK"
