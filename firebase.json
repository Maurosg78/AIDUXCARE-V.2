{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": { 
      "port": 5001,
      "host": "127.0.0.1"
    },
    "firestore": { 
      "port": 8080,
      "host": "127.0.0.1"
    },
    "auth": { 
      "port": 9099,
      "host": "127.0.0.1"
    },
    "ui": { 
      "enabled": true, 
      "port": 4001,
      "host": "127.0.0.1"
    },
    "hub": {
      "port": 4400,
      "host": "127.0.0.1"
    }
  },
  "targets": {
    "test": {
      "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
      }
    }
  }
}
