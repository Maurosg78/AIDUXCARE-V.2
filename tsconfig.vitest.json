{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom/vitest",
      "node"
    ],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/setupTests.ts"
  ],
  "exclude": [
    "AIDUXCARE-STABLE",
    "tests/legacy"
  ]
}
  